<?php  
global $var_yttheme;  
$rich_snippet    = Mage::getStoreConfig('market_cfg/rich_snippets_setting/use_rich_snippet');
$set_breadcrumbs = Mage::getStoreConfig('market_cfg/rich_snippets_setting/set_breadcrumbs');
?>
<?php if(($crumbs && is_array($crumbs)) || $var_yttheme->isHomepage()): ?>
<div id="yt_pathway" class="clearfix">
	<div class="pathway-inner">
		<!--<h4><?php //echo $this->__("You're currently on:") ?></h4>-->
		<ul class="breadcrumbs">
            <div class="breadcrumbs-content">
				<?php if($var_yttheme->isHomepage()) :?><li class="breadcrumbs-home" <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemscope itemtype="http://data-vocabulary.org/Breadcrumb"<?php }?>><?php echo "Home"; ?></li><?php endif; ?>
				<?php foreach($crumbs as $_crumbName=>$_crumbInfo): ?>
				
				
				<?php if($_crumbInfo['link']): ?>
				
				<?php if($this->escapeHtml($_crumbInfo['label']) == "Home"){?>
					<li class="" <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemscope itemtype="http://data-vocabulary.org/Breadcrumb"<?php }?>><a href="<?php echo $this->getUrl() ?>"><span <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemprop="title"<?php }?>><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span></a></li>
				<?php } else {?>	
					<li class="last" <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemscope itemtype="http://data-vocabulary.org/Breadcrumb"<?php }?>><span <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemprop="title"<?php }?>><?php echo $this->escapeHtml($_crumbInfo['label']) ?></span></li>
				<?php } ?> 
				<?php elseif($_crumbInfo['last']): ?>
					<li class="last" <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemscope itemtype="http://data-vocabulary.org/Breadcrumb"<?php }?>><?php echo $this->htmlEscape($_crumbInfo['label']) ?></li>
				<?php else: ?>
					<li class="last" <?php if ( $rich_snippet == 1 && $set_breadcrumbs ){?>itemscope itemtype="http://data-vocabulary.org/Breadcrumb"<?php }?>><?php echo $this->htmlEscape($_crumbInfo['label']) ?></li>
				<?php endif; ?>
				
				<?php endforeach; ?>
			</div>
		</ul>
	</div>
</div>
<?php endif; ?>




<script>
jQuery('.breadcrumbs').html(jQuery('.breadcrumbs').html().replace('| mSupply.com',''));
jQuery('.breadcrumbs').html(jQuery('.breadcrumbs').html().replace('| mSupply',''));
</script>