 <script>
    function load()
    {
      var element = $(this);
      var comment = element.contents().filter(function() {
        return this.nodeType === 8;
      }).get(0);
      var newElement = $(comment && comment.data);
      element.replaceWith(newElement);
      newElement.fadeOut(0, function() {
        newElement.fadeIn(3000);
      });
    }
