<div class="box-account box-recent">
<?php $_orders = $this->getOrders(); ?>
    <div class="box-head">
        <h2><?php echo $this->__('Recent Orders') ?></h2>
        <?php if( sizeof($_orders->getItems()) > 0 ): ?><a href="<?php echo $this->getUrl('sales/order/history') ?>"><?php echo $this->__('View All') ?></a><?php endif; ?>
    </div>
<?php if( sizeof($_orders->getItems()) > 0 ): ?>
    <table class="data-table cart-table bdtable" id="my-orders-table">
        <thead class="bdtop">
            <tr>
                <th><span class="order_header"><?php echo $this->__('Order #') ?></span></th>
                <th><span class="order_header"><?php echo $this->__('Date') ?></span></th>
                <th><span class="order_header"><?php echo $this->__('Ship To') ?></span></th>
                <th><span class="order_header"><?php echo $this->__('Order Total') ?></span></th>
                <th><span class="order_header"><?php echo $this->__('Status') ?></span></th>
                <th><span class="order_header"><?php echo $this->__('View') ?></span></th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($_orders as $_order): ?>
                <tr class="nobd my_order_bg">
                    <td class="a-left"><?php echo $_order->getRealOrderId() ?></td>
                    <td class="a-left"><span class="nobr"><?php echo $this->formatDate($_order->getCreatedAtStoreDate()) ?></span></td>
                    <td class="a-left"><?php echo $_order->getShippingAddress() ? $this->htmlEscape($_order->getShippingAddress()->getName()) : '&nbsp;' ?></td>
                    <td class="a-left"><?php echo $_order->formatPrice($_order->getGrandTotal()) ?></td>
                    <td class="a-left"><em><?php echo $_order->getStatusLabel() ?></em></td>
                    <td class="a-left">
                        <span class="nobr">
                        <a href="<?php echo $this->getViewUrl($_order) ?>"><?php echo $this->__('View Order') ?></a>
                        <?php if ($this->helper('sales/reorder')->canReorder($_order)) : ?>
                            <span class="separator">|</span> <a href="<?php echo $this->getReorderUrl($_order) ?>" class="link-reorder"><?php echo $this->__('Reorder') ?></a>
                        <?php endif ?>
                        </span>
                    </td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
    <script type="text/javascript">decorateTable('my-orders-table')</script>
<?php else: ?>
    <p><?php echo $this->__('You have placed no orders.'); ?></p>
<?php endif; ?>
</div>

