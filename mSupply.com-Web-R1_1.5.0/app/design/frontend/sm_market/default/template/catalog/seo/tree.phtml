?>
<?php $_items = $this->getCollection(); ?>
<?php if($_items->getSize()): ?>
<div class="col-lg-9 col-md-9 col-sm-9 col-xs-12" style="padding-right:15px;">
<div class="left_panel" style="width:100%;">
<?php echo $this->getChildHtml('pager_top') ?>
	<div class="sitemap-head"> <?php echo $this->__('Site Map') ?></div>
    <ul class="sitemap">
		<li class="level-0">
			<a href="<?php echo $this->getUrl('') ?>" class="citemlist"><?php echo "Home - Buy Construction &  Interior Materials Online" ?></a>
		</li>
        <?php foreach ($_items as $_item): ?>
		<?php if( $_item->is_active ) { ?> 
            <li class="level-<?php echo $this->getLevel($_item) ?>" <?php echo $this->getLevel($_item)?'style="padding-left:' . $this->getLevel($_item, 2) . '0px;"':'' ?>>
			<a class="citemlist" href="<?php echo $this->getItemUrl($_item) ?>"><?php echo $_item->name ?></a>
			</li>
		<?php } ?> 	
        <?php endforeach; ?>
    </ul>
<?php else: ?>
    <p class="note-msg">
        <?php echo $this->__('There are no %s available.', $this->getItemsTitle()); ?>
    </p>
	
<?php endif ?>
</div>
</div>

